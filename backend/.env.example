
# -- Server --
SERVER_PORT=8080

# -- Database --
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/logistics_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_db_password

# -- Redis --
# For local Docker: REDIS_HOST=localhost, REDIS_PORT=6379
# For Redis Cloud: use the provider's host and port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# -- JWT --
# Must be at least 32 characters (256-bit)
# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_to_a_32_char_hex_secret_key
JWT_REFRESH_SECRET=change_me_to_another_32_char_hex_secret